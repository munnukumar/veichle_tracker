
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node", "express"],
      "outDir": "./dist",
      "rootDir": "./",
      "lib": ["es2020"]
    },
    "include": ["**/*.ts"],  // Changed to include all .ts files in the root and subdirectories
    "exclude": ["node_modules", "dist"]
  }
  